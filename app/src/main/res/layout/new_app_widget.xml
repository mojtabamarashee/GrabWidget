<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aac"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="200pt"
        android:layout_height="25pt"
        android:background="#aac"
        android:padding="1dp">
    <TextView
        android:id="@+id/test_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:background="#06C"
        android:contentDescription="@string/appwidget_text"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:paddingRight="20pt"
        android:paddingLeft="20pt"
        android:textSize="18pt"
        android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:background="#06C"
            android:contentDescription="@string/appwidget_text"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:layout_marginTop="0dp"/>

    </RelativeLayout>






    <TextView
        android:id="@+id/emami_text"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:textSize="18dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/nim_text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/appwidget_text2"
        android:text="@string/appwidget_text2"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="60dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ccccff"
        android:background="@android:color/transparent"
        android:id="@+id/refresh"
        android:src="@drawable/icons8_refresh_50"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/pause_12"
        android:layout_marginLeft="2dip"
        android:textColor="#ccccff"
        android:layout_alignParentRight="true"
        android:src="@drawable/icons8_pause_50"/>


</RelativeLayout>