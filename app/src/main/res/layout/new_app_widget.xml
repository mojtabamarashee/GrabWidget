<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220"
    android:padding="1sp">

    <RelativeLayout
        android:layout_width="400sp"
        android:layout_height="30sp"
        android:background="#aac"
        android:padding="1sp">
    <TextView
        android:id="@+id/test_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:background="#06C"
        android:contentDescription="@string/appwidget_text"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:paddingRight="20pt"
        android:paddingLeft="20pt"
        android:textSize="18pt"
        android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#06C"
            android:contentDescription="@string/appwidget_text"
            android:text="init ..."
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginTop="0sp"/>

    </RelativeLayout>






    <TextView
        android:id="@+id/emami_text"
        android:layout_width="wrap_content"
        android:layout_weight=".50"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/"
        android:autoSizeTextType="uniform"
        android:textStyle="" />



    <TextView
        android:id="@+id/nim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/appwidget_text2"
        android:text="@string/appwidget_text2"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="100sp"
        android:layout_marginTop="40sp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="none"
        android:autoSizeTextType="uniform"

        android:textStyle="" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ccccff"
        android:background="@android:color/transparent"
        android:id="@+id/refresh"
        android:src="@drawable/update_30"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/pause_12"
        android:layout_marginLeft="2dip"
        android:textColor="#ccccff"
        android:layout_alignParentRight="true"
        android:src="@drawable/pause_30"/>


</RelativeLayout>